{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}
<nav class="navbar navbar-expand-lg bg-dark py-0 px-0 fixed-top">
        <div class="container-fluid px-0  ">
            <div> <a class="navbar-brand text-white mx-3 fw-bold fs-2 " href="#">{{sparePart.designation |upper }}</a></div>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">

                <ul class="navbar-nav ">
                     <li class="nav-item active">
                        <a class="nav-link bg-secondary px-5 text-white fw-bold fs-5 " href="#"><i class="fa-solid fa-user"></i>
                          </a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link bg-warning bg-opacity-50 px-5 text-white fw-bold fs-5"
                            href="{{ path('main_index') }} " target="_blank"><i class="fa-solid fa-house-chimney"></i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link bg-success bg-opacity-75 px-5 text-white fw-bold fs-5"
                            href="#"><i class="fa-solid fa-cart-shopping"></i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link bg-light px-5 fw-bold fs-5"
                            href="#"><i class="fa-solid fa-arrow-right-from-bracket"></i></a>
                    </li>
    
                </ul>
            </div>
        </div>

    </nav>
 
        <!-- section  -->
    <div class="container d-flex flex-column  d-flex flex-wrap my-5 ">
        <div class=" row vh-100 align-items-center ">
        <div class="row ">
                <!-- photo -->
                <div class="col-sm mx-2">
                                <p class="text-center"> 
                                    <strong> (PDF éclaté machine avec références)</strong></p>

                                    <img src="{{ asset('images/machine.png') }}" width="90%" height="95%" alt="pieces">
                                 
                </div>

                <!--  reference -->
                
                <div class="col-sm  mx-2"> 
                                <div class=" ">

                                    <select class="form-select  mt-5 my-sm-2 text-center" aria-label="Default select example">
                                        <option selected>type machin/liste</option>
                                        <option value="1">{{deviceType.designation }}</option>
                                        <option value="2">{{deviceType.designation }}</option>
                                      </select>
                                     
                                            <input type="text" class="form-control text-center my-3" placeholder="matricule machine ">
                                            {{ form(form) }}
                                        <div class="my-5 py-5"> 
                                            <img src=" {{ asset('images/parts/' ~  sparePart.image) }}" alt="polin" class="w-100">
                                        </div>
                                    </div>
                    </div>
                 <!-- panier -->
                <div class="col-sm mx-2  ">
                                            <h1 class="display-6 lead">{{sparePart.reference }}</h1>
                                            <h6>{{sparePart.designation }}</h6>
                                            <p class="text-muted text-sm-center">   {{sparePart.description }}</p>

                                            <h4 class="text-end text-sm-center mt-5 my-sm-2">Prix public HT:  {{sparePart.unitPrice  / 100}} €</h4>
                                            <h4 class="my-4 text-center"> Quantité : <input type="number" class="bg-secondary w-25"></h4>
                                            
                                                <div class="my-4 text-center text-sm-end">
                                                    <button type="button" class="btn btn-warning btn-lg">
                                                        <a class="nav-link "  href="#">PANIER</a></button>
                                                </div>
                </div>
          
            </div>    
        </div>             
    </div>

    {% endblock %}